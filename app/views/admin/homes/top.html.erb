<div class="container">
  <div class="row">
    <h2 class="col-12 my-4">グループ一覧</div>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>作成日</th>
        </tr>
      </thead>
      <tbody>
        <% @groups.each do |group| %>
        <tr>
          <td><%= group.id %></td>
          <td><%= link_to admin_group_path(group.id) do %><%= group.name %><% end %></td>
          <td><%= group.created_at %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>