<div class="container">
  <div class="row">
    <h2 class="col-12 my-4">ユーザー一覧</div>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>email</th>
          <th>登録日</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to admin_user_path(user.id) do %><%= user.name %><% end %></td>
          <td><%= user.email %></td>
          <td><%= user.created_at.to_date.strftime('%Y/%m/%d') %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>