<div class="container">
  <h3 class="text-success"><%= flash[:update_user] %></h3>
</div>
<div class="container">
  <h2 class="my-4"><span class="bg-light">マイページ</span></h2>

  <div class="row">
    <div class="col-md-6 col-sm-12 my-2">
      <strong>登録情報</strong></td>
      <%= link_to edit_user_path(@user.id) do %>
        <i class="fas fa-user-edit"></i>
      <% end %>
      <table>
        <tbody class="table">
          <tr>
            <td class="bg-light">ID</td>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <td class="bg-light">Name</td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td class="bg-light">email</td>
            <td><%= @user.email %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-md-6 col-sm-12">
      <% if @groups.count == 0 %>
      <% else %>
      <h3 class="my-4"><span class="bg-light">参加グループ</span></h3>
        <% @groups.each do |group| %>
          <%= link_to group_plans_path(group.id) do %><%= group.name %><% end %><br>
        <% end %>
      <% end %>
    </div>

    <% if @invitations.count == 0 %>
    <% else %>
    <h3 class="my-4 col-12"><span class="bg-light">招待されているグループ</span></h3>
    <div class="col-12">
      <% @invitations.each do |invitation| %>
        <%= link_to edit_group_invitation_path(invitation.group_id, invitation.id) do %><%= invitation.group.name %><% end %><br>
      <% end %>
    </div>
    <% end %>

    <h3 class="my-4 col-12"><span class="bg-light">グループ新規作成</span></h3>
    <div class="col-6">
      <%= form_with model: @group, url: groups_path(@group.id), method: :post do |f| %>
        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="field">
          <%= f.label :introduction %><br>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <%= f.hidden_field :owner_id, :value => current_user.id %>
        <%= f.submit "新規作成", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>