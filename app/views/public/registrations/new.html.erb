<div class="container">
  <h3 class="text-danger"><%= flash[:withdraw] %></h3>
</div>


<div class="container">
  <h2 class="my-4"><span class="bg-light">新規登録</span></h2>

  <div class="row">
    <div class="col-10">
      <%= form_with model: @user, url: user_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <table class="table table-borderless">
          <tbody>
            <tr>
              <td>名前</td>
              <td><%= f.text_field :name, class: "form-control" %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.email_field :email, class: "form-control" %></td>
            </tr>
            <tr>
              <td>パスワード(6文字以上)</td>
              <td><%= f.password_field :password, class: "form-control" %></td>
            </tr>
            <tr>
              <td>パスワード(確認用)</td>
              <td><%= f.password_field :password_confirmation, class: "form-control" %></td>
            </tr>
            <tr>
              <td></td>
              <td class="actions text-center"><%= f.submit "新規登録", class: "btn btn-success" %></td>
            </tr>
          </tbody>
        </table>

      <% end %>
    </div>
  </div>

  <h2 class="my-4"><span class="bg-light">既に登録済の方</span></h2>
    <div class="row">
      <div class="col-1 text-right">
        <%= render "public/shared/links" %>
      </div>
      <div class="col-10">
        <p>からログインしてください</p>
      </div>
    </div>
</div>