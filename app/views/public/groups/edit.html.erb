<div class="container">
  <h3 class="my-4 col-12"><span class="bg-light">グループ編集</span></h3>
  <div class="col-12">
    <%= form_with model: @group, url: group_path(@group.id), method: :patch do |f| %>
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :introduction %><br>
        <%= f.text_area :introduction, class: "form-control" %>
      </div>
      <%= f.hidden_field :owner_id, :value => current_user.id %>
      <%= f.submit "更新", class: "btn btn-success" %>
    <% end %>
  </div>
</div>